{
	"extends": ["../../../../.eslintrc.json"],
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"files": ["*.ts"],
			"extends": ["plugin:@nx/angular", 
					   "plugin:@angular-eslint/template/process-inline-templates",
			 	 		"../../../../.eslintrc.rules.json"],
			"rules": {
				"@angular-eslint/directive-selector": [
					"error",
					{
						"type": "attribute",
						"prefix": "estimateCommon",
						"style": "camelCase"
					}
				],
				"@angular-eslint/component-selector": [
					"error",
					{
						"type": "element",
						"prefix": "estimate-common",
						"style": "kebab-case"
					}
				]
			}
		},
		{
			"files": ["*.html"],
			"extends": ["../../../../.eslintrc.rules.json"]
		}
	]
}
