{
	"$schema": "http://json-schema.org/schema",
	"cli": "nx",
	"$id": "rib-class",
	"type": "object",
	"properties": {
		"name": {
			"type": "string",
			"description": "Library name",
			"$default": {
				"$source": "argv",
				"index": 0
			}
		},
		"project": {
			"type": "string",
			"description": "Project Name",
			"$default": {
				"$source": "project"
			}
		}
	},
	"required": ["name", "project"]
}
